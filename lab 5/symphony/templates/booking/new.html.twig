{% extends 'base.html.twig' %}

{% block title %}Create new Booking{% endblock %}

{% block stylesheets %}
    <style>
        .form-container {
            max-width: 500px;
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="date"],
        select {
            width: 100%;
            padding: 8px;
            font-size: 16px;
        }

        button {
            padding: 8px 16px;
            font-size: 16px;
            background-color: #2d6cdf;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #1c4fb3;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Create new Booking</h1>

    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.startDate) }}
                {{ form_widget(form.startDate) }}
            </div>
            <div class="form-group">
                {{ form_label(form.endDate) }}
                {{ form_widget(form.endDate) }}
            </div>
            <div class="form-group">
                {{ form_label(form.room) }}
                {{ form_widget(form.room) }}
            </div>
            <div class="form-group">
                {{ form_label(form.client) }}
                {{ form_widget(form.client) }}
            </div>
            <div class="form-group">
                {{ form_widget(form._token) }}
                <button type="submit">Save</button>
            </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>

    <a href="{{ path('app_booking_index') }}">back to list</a>
{% endblock %}
